;; # -*- mode: lisp-interaction -*-

;; also see https://emacs.stackexchange.com/a/47432/11872
(defun bee-shell ()
  "Load command-line R on BEE server"
  (interactive)
    (shell)
    (rename-buffer "RR-bee")
    (comint-send-string "RR-bee" "ssh bee\n")
    (comint-send-string "RR-bee" "R\n")
    (ess-remote "*shell*" "R")
    )

