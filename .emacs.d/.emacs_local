(defun rescomp2-r-load()
  "Load R in rescomp shell"
  (interactive)
  (comint-send-string "RR-rescomp" "module load R\n")
  ;; run interactive job
  ;; added Thu May  7 11:49:41 EDT 2020
  (comint-send-string "RR-rescomp" "interactive\n")
  (comint-send-string "RR-rescomp" "R\n")
  (ess-remote "*shell*" "R")
  )
